<div class="container">
<% if flash[:alert] %>
<div class="alert">
<%= flash[:alert] %>
  </div>
<% end %>



<div id="box">
  <div id="images">
    <div class="image1"></div>
    <div class="image2"></div>
    <div class="image3"></div>
    <div class="image4"></div>
  </div>
      <p class="top-image-text">Welcome to ANIMERTER</p>
</div>

<%# おすすめアニメ表示 %>
  <h3 class="form-title"><i class="far fa-thumbs-up"></i>おすすめ作品</h3>
<%= render 'animes/anime_list', animes: @animes %>
</div>

<div class="container">
<div class="col-xs-2"></div>
<%# 最新の投稿 %>
<div class="col-xs-8">
<h3 class="form-title"><i class="far fa-comments"></i>最新の投稿</h3>

<% @reviews.each do |review|%>
<div class="comment-table">
<div class="row">
<h4 class="col-xs-4"><%= review.episode.anime.title %>
<span>第<%= review.episode.episode_number %>話</span></h4>
<div class="created"><%= link_to review.user.name,user_path(review.user) %>さんの感想</div>
</div>
<div class="row">
<div class="col-xs-4">
<%= attachment_image_tag(review.episode, :image, fallback: "no_image.jpg", size:'100x100',  format: "jpg")%>
</div>
<div class="comment col-xs-7"><%= review.comment %></div>
</div>
<div class="row">
<div class="review-rating col-xs-4" data-score="<%= review.rate %>"></div>
<div class="col-xs-4"></div>
<span><i class="fas fa-history"></i><%= time_ago_in_words(review.created_at) %> 前</span>
</div>
</div>
<% end %>

</div>
<div class="col-xs-2"></div>
</div>
<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
   starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>'
  });
</script>
