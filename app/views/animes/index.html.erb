<h2>全ての作品</h2>
<%# 並び換え機能 %>
<%= form_with model: @anime, url: search_path, method: :get, local: true do |f| %>
  <%= f.select :keyword, [ ['投稿が新しい順', 'new'], ['投稿が古い順', 'old'], ['評価順', 'good'] ] %>
  <%= f.submit %>
  <% end %>

<%= render 'anime_list', animes: @animes %>
<script>
  $('.review-rating').raty({
    size     : 100,
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
