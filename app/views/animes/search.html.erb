<h2>検索結果</h2>
<%# 並び換え機能 %>
<%= form_with model: @anime, url: search_path, method: :get, local: true do |f| %>
  <%= f.select :keyword, [ ['投稿が新しい順', 'new'], ['投稿が古い順', 'old'], ['評価順', 'good'] ] %>
  <%= f.submit %>
  <% end %>

    <% @animes.each do |anime|%>
    <div class="table">
     <div class="row">
        <div class ="col-xs-4 title_image">
          <%= attachment_image_tag(anime, :image, :fill,200,200, fallback: "no_image.jpg", size:'200x200',  format: "jpg")%>
          <% @sum = 0 %>
            <% anime.episodes.each do |episode| %>
<% episode_rate = episode.reviews.average(:rate).to_f.round(1)%>
<% (@sum+=episode_rate) %>
<% end %>
<% if anime.episodes.count != 0 %>
<div class="review-rating" data-score="<%= @sum/anime.episodes.count %>"></div>
<% end %>
        </div>
          <div class="anime-title">
            <h3><%= link_to anime.title, anime_path(anime)%></h3>
            <div class="explanation"><%= anime.explanation %></div>

          </div>
      </div>
    </div>
  <% end %>
