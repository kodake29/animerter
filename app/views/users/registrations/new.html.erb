<div class="col-xs-4"></div>
<div class="col-xs-4 registrations">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム" ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "パスワード",class:"form-control" %>
        <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
  </div>

  <div class="form-group">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード",class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>