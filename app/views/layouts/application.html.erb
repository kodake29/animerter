<!DOCTYPE html>
<html>
  <head>
    <title>Animerter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top" style="background-color: #C0C0C0;">
        <div class="conteiner">
            <div class="row" style="margin-right: 560px">

                <nav>
                    <ul class="nav navbar-nav navbar-right">
                        <% if admin_signed_in? %>
                        <nav class="nav navber-nav navbar-left">


                            <div class="logo">
                               <%= link_to image_tag('logo.png', :width => '200', :height => '150' ), '/' %>
                            </div>

                        </nav>
                        <li>
<%= link_to admins_animes_path do %>
                            <button type="button" class="btn btn-secondary">アニメ一覧</button>
<% end %>
                        </li>
                        <li>
<%= link_to admins_users_path do %>
                            <button type="button" class="btn btn-secondary">ユーザ一覧</button>
<% end %>
                        </li>
                        <li>
<%= link_to admins_reviews_path do %>
                            <button type="button" class="btn btn-secondary">レビュー一覧</button>
<% end %>
                        </li>
                        <li>
<%= link_to(destroy_admin_session_path, method: :delete) do %>
                            <button type="button" class="btn btn-secondary">ログアウト</button>
<% end %>
                        </li>
                        <% elsif user_signed_in? %>
                        <nav class="nav navber-nav navbar-left">

                            <div class="logo">
                                <%= link_to image_tag('logo.png', :width => '200', :height => '150' ), '/' %>
                            </div>


                         </nav>
                        <li>
                            <p class="welcome">ようこそ、
                                <%= current_user.name%>さん!</p>
                        </li>
                        <li>
                        <%= link_to(about_path) do %>
                            <button type="button" class="btn btn-secondary">About</button>
<% end %></li>
                        <li>
<%= link_to user_path(current_user) do%>
                            <button type="button" class="btn btn-secondary">マイページ</button>
<% end %>
                        </li>
                        <li>
<%= link_to animes_path do %>
                            <button type="button" class="btn btn-secondary">アニメ一覧</button>
<% end %>
                        </li>
                        <li>

<%= link_to(destroy_admin_session_path, method: :delete) do %>
                            <button type="button" class="btn btn-secondary">ログアウト</button>
<% end %>

                        </li>
<% else %>
                        <nav class="nav navber-nav navbar-left">
                            <p class="logo">
    <%= link_to image_tag('logo.png', :width => '200', :height => '150' ), '/' %>
                            </p>
                         </nav>
                        <li>

<%= link_to(about_path) do %>
                            <button type="button" class="btn btn-secondary">About</button>
<% end %>
                        </li>
                        <li>
<%= link_to animes_path do %>
                            <button type="button" class="btn btn-secondary">アニメ一覧</button>
<% end %>
                        </li>
                        <li>
<%= link_to new_user_registration_path do %>
                            <button type="button" class="btn btn-secondary">新規登録</button>
<% end %>
                        </li>
                        <li>
<%= link_to new_user_session_path do %>
                            <button type="button" class="btn btn-secondary">ログイン</button>
<% end %>

                        </li>
<% end %>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
<div class="margin" style="margin-top: 150px"></div>

<div class="container"><%= yield %></div>

  </body>
</html>
